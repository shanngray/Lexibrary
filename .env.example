# Lexibrarian environment variables
# Copy this file to .env and fill in your values.
# These override values from lexibrary.toml when set.

# Project root path — the directory Lexibrarian will crawl.
# If unset, CLI commands default to the current working directory.
LEXI_PROJECT_PATH=

# LLM provider: "anthropic", "openai", or "ollama"
LEXI_LLM_PROVIDER=

# Model identifier (e.g. "claude-sonnet-4-5-20250514", "gpt-4o-mini", "llama3.2")
LEXI_LLM_MODEL=

# API key override — applies to whichever provider is active.
# If set, this takes priority over the provider-specific keys below.
LEXI_API_KEY=

# Provider-specific API keys (used when LEXI_API_KEY is not set)
ANTHROPIC_API_KEY=
OPENAI_API_KEY=
